{# templates/theme/flowbite/_options.html.twig #}

{% set td = (translation_domain is defined ? translation_domain : null) %}
{% if td is null and app is defined %}
    {% set td = app.request.query.get('translation_domain') %}
{% endif %}
{% if td is empty %}
    {% set td = null %}
{% endif %}

{% if results is empty %}
    <div class="autocomplete-empty px-4 py-2 text-sm text-gray-500">No results</div>
{% else %}
    <ul class="autocomplete-list py-1 text-sm text-gray-700" role="listbox" aria-label="Autocomplete results">
        {% for item in results %}
            {% set label_text = item.label %}
            {% if td is not same as(false) %}
                {% if td is null %}
                    {% set label_text = item.label|trans %}
                {% else %}
                    {% set label_text = item.label|trans({}, td) %}
                {% endif %}
            {% endif %}

            <li class="autocomplete-option cursor-pointer px-4 py-2 hover:bg-gray-100"
                role="option"
                tabindex="-1"
                data-autocomplete-option-value="{{ item.id }}"
                data-autocomplete-option-label="{{ label_text }}"
                    {% if item.meta is defined %}
                        data-autocomplete-option-meta="{{ item.meta|json_encode|e('html_attr') }}"
                    {% endif %}
            >
                {{ label_text }}
            </li>
        {% endfor %}
    </ul>
{% endif %}
